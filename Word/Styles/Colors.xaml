<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Word">

    <Color x:Key="LightBackground">Gainsboro</Color>
    <SolidColorBrush x:Key="LightBackgroundBrush" Color="{StaticResource LightBackground}" />

    <Color x:Key="LighterBackground">white</Color>
    <SolidColorBrush x:Key="LighterBackgroundBrush" Color="{StaticResource LighterBackground}" />

    <Color x:Key="LightForeground">white</Color>
    <SolidColorBrush x:Key="LightForegroundBrush" Color="{StaticResource LightForeground}" />

    <Color x:Key="MainForeground">gray</Color>
    <SolidColorBrush x:Key="MainForegroundBrush" Color="{StaticResource MainForeground}" />

    <Color x:Key="DarkForeground">#0F0B26</Color>
    <SolidColorBrush x:Key="DarkForegroundBrush" Color="{StaticResource DarkForeground}" />

    <Color x:Key="DarkerForeground">black</Color>
    <SolidColorBrush x:Key="DarkerForegroundBrush" Color="{StaticResource DarkerForeground}" />

    <Color x:Key="BlueForeground">DeepskyBlue</Color>
    <SolidColorBrush x:Key="BlueForegroundBrush" Color="{StaticResource BlueForeground}" />

    <Color x:Key="DarkBlueForeground">Blue</Color>
    <SolidColorBrush x:Key="DarkBlueForegroundBrush" Color="{StaticResource DarkBlueForeground}" />

    <Color x:Key="YellowForeground">gold</Color>
    <SolidColorBrush x:Key="YellowForegroundBrush" Color="{StaticResource YellowForeground}" />

    <Color x:Key="OrangeForeground">Orange</Color>
    <SolidColorBrush x:Key="OrangeForegroundBrush" Color="{StaticResource OrangeForeground}" />

    <Color x:Key="RedForeground">crimson</Color>
    <SolidColorBrush x:Key="RedForegroundBrush" Color="{StaticResource RedForeground}" />

    <Color x:Key="GreenForeground">lawngreen</Color>
    <SolidColorBrush x:Key="GreenForegroundBrush" Color="{StaticResource GreenForeground}" />

</ResourceDictionary>