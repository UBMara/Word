<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Word" xmlns:system="clr-namespace:System;assembly=netstandard">

    <FontFamily x:Key="LatoRegular">pack://application:,,,/Fonts/#Lato Regular</FontFamily>
    <FontFamily x:Key="LatoThin">pack://application:,,,/Fonts/#Lato Thin</FontFamily>
    <FontFamily x:Key="LatoBold">pack://application:,,,/Fonts/#Lato Bold</FontFamily>
    <FontFamily x:Key="FontAwesome">pack://application:,,,/Fonts/#FontAwesome</FontFamily>

    <Style TargetType="{x:Type Control}" x:Key="BasicStyle">
        <Setter Property="FontFamily" Value="{StaticResource LatoThin}"/>
    </Style>

    <Style TargetType="{x:Type TextBlock}" x:Key="BasicTextBlockStyle">
        <Setter Property="FontFamily" Value="{StaticResource LatoThin}"/>
    </Style>

    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource BasicStyle}"/>
    <Style TargetType="{x:Type Label}" BasedOn="{StaticResource BasicStyle}"/>
    <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource BasicTextBlockStyle}"/>
    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource BasicStyle}"/>
    <Style TargetType="{x:Type ListView}" BasedOn="{StaticResource BasicStyle}"/>

    <system:Double x:Key="RegularFontSize">20</system:Double>
    <system:Double x:Key="AverageFontSize">18</system:Double>
    <system:Double x:Key="SmallFontSize">14</system:Double>
    <system:Double x:Key="LargeFontSize">30</system:Double>

    <system:String x:Key="FontChatIcon">&#xf086;</system:String>
    <system:String x:Key="FontUserIcon">&#xf0c0;</system:String>
    <system:String x:Key="FontPictureIcon">&#xf03e;</system:String>
    <system:String x:Key="FontCogIcon">&#xf085;</system:String>
</ResourceDictionary>