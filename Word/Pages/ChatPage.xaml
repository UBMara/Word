<local:BasePage x:Class="Word.ChatPage"
      x:TypeArguments="core:LoginViewModel"          
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Word"
      xmlns:core="clr-namespace:Word.Core.ViewModel;assembly=Word.Core"
      mc:Ignorable="d" 
      x:Name="Page"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChatPage">

    <Border Background="{StaticResource BlueForegroundBrush}">
        <Grid>
            <Grid.Background>
                <ImageBrush TileMode="Tile" 
                ViewportUnits="Absolute"
                Viewport="0 0 500 500"
                ImageSource="/Images/emoji-background.png"/>
            </Grid.Background>
        </Grid>
    </Border>
</local:BasePage>
