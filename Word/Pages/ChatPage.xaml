<local:BasePage x:Class="Word.ChatPage"
      x:TypeArguments="core:MessageListViewModel"          
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Word"
      xmlns:core="clr-namespace:Word.Core.ViewModel;assembly=Word.Core"
      mc:Ignorable="d" 
      x:Name="Page"
      d:DesignHeight="700" d:DesignWidth="700">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Height="50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Parnell" 
                       Grid.ColumnSpan="2"
                       Foreground="{StaticResource LightBackgroundBrush}"
                       FontSize="{StaticResource XLargeFontSize}"
                       FontFamily="{StaticResource LatoRegular}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       />
            <StackPanel Orientation="Horizontal" Grid.Column="1">
                <Button Style="{StaticResource ChatIconButton}" Content="{StaticResource FontSearchIcon}"/>
                <Button Style="{StaticResource ChatIconButton}" Content="{StaticResource FontEllipsesIcon}"/>
            </StackPanel>
            
        </Grid>

        <local:ChatMessageListControl />

        <local:BubbleContent Grid.Row="1" 
                             VerticalAlignment="Bottom" 
                             HorizontalAlignment="Left"
                             local:AnimateSlideBottom.Value="{Binding AttachmentMenuVisible}"/>

        <Grid Grid.Row="2" 
              MinHeight="50"
              MaxHeight="140"
              Background="{StaticResource LighterBackgroundBrush}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Style="{StaticResource IconGrowButton}" 
                    Height="{Binding MinHeight, RelativeSource={RelativeSource AncestorType=Grid}}"
                    Content="{StaticResource FontPaperClipIcon}"
                    Command="{Binding AttachmentButtonCommand}"
                    Foreground="{StaticResource DarkerForegroundBrush}"/>

            <TextBox Grid.Column="1" 
                     Tag="Write a message..."
                     FontSize="{StaticResource RegularFontSize}"
                     VerticalAlignment="Center"
                     BorderThickness="0"
                     Padding="0 10 10 10"
                     AcceptsReturn="True"
                     AcceptsTab="True"
                     VerticalScrollBarVisibility="Auto"
                     />

            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        VerticalAlignment="Top"
                        Margin="0 0 8 0">
                <Button Style="{StaticResource IconGrowButton}" 
                        Height="{Binding MinHeight, RelativeSource={RelativeSource AncestorType=Grid}}"
                        Content="{StaticResource FontEmojiIcon}"
                        Foreground="{StaticResource OrangeForegroundBrush}"/>

                <Button Content="Send"
                        Padding="8"
                        Background="{StaticResource DarkGreenForegroundBrush}"
                        Foreground="{StaticResource DarkerForegroundBrush}"/>
            </StackPanel>
        </Grid>
    </Grid>
</local:BasePage>
