<UserControl x:Class="Word.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Word"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="{StaticResource LighterBackgroundBrush}" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Height="40" Margin="0 0 0 20">
                <Button Height="40"
                        Style="{StaticResource IconGrowButton}" 
                        Content="{StaticResource FontLeftArrowIcon}"
                        Foreground="{StaticResource GrayForegroundBrush}"
                        FontFamily="{StaticResource FontAwesome}"
                        Command="{Binding CloseCommand}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"/>

                <TextBlock FontSize="{StaticResource LargeFontSize}"
                       Foreground="{StaticResource DarkerForegroundBrush}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <Run FontFamily="{StaticResource FontAwesome}"
                     Text="{StaticResource FontCogIcon}"
                     Foreground="{StaticResource OrangeForegroundBrush}" />
                <Run Text="Settings"
                     FontFamily="{StaticResource LatoRegular}" />
                </TextBlock>
            </Grid>

            <Grid Grid.Row="1"
                  Width="700"
                  VerticalAlignment="Top">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid Margin="0 0 10 0"
                      Height="{Binding ActualWidth, RelativeSource={RelativeSource Self}}">

                    <Border CornerRadius="8"
                            Name="Mask"
                            Background="White"
                            />
                    <Grid>
                        <Grid.OpacityMask>
                            <VisualBrush Visual="{Binding ElementName=Mask}" />
                        </Grid.OpacityMask>

                        <Image Source="/Images/rusty.jpg" Stretch="UniformToFill"/>
                    </Grid>
                </Grid>

                <Grid Grid.Column="1"
                      local:PanelChildMarginProperty.Value="15 8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Name" FontFamily="{StaticResource LatoRegular}" />
                    <TextBlock Text="Username" Grid.Row="1" FontFamily="{StaticResource LatoRegular}" />
                    <TextBlock Text="Password" Grid.Row="2" FontFamily="{StaticResource LatoRegular}" />
                    <TextBlock Text="Email" Grid.Row="3" FontFamily="{StaticResource LatoRegular}" />

                    <TextBlock Text="Luke Malpass" Grid.Column="1" />
                    <TextBlock Text="luke" Grid.Column="1" Grid.Row="1" />
                    <TextBlock Text="********" Grid.Column="1" Grid.Row="2" />
                    <TextBlock Text="contact@angelsix.com" Grid.Column="1" Grid.Row="3" />
                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>
