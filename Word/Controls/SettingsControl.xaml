<UserControl x:Class="Word.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Word"
             xmlns:core="clr-namespace:Word.Core.ViewModel;assembly=Word.Core"
             mc:Ignorable="d" 
             d:DataContext="{x:Static core:SettingsDesignModel.Instance}">
    <Border Background="{StaticResource LighterBackgroundBrush}" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Height="40" Margin="0 0 0 20">
                <Button Height="40"
                        Style="{StaticResource IconGrowButton}" 
                        Content="{StaticResource FontLeftArrowIcon}"
                        Foreground="{StaticResource GrayForegroundBrush}"
                        FontFamily="{StaticResource FontAwesome}"
                        Command="{Binding CloseCommand}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"/>

                <TextBlock FontSize="{StaticResource LargeFontSize}"
                       Foreground="{StaticResource DarkerForegroundBrush}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <Run FontFamily="{StaticResource FontAwesome}"
                     Text="{StaticResource FontCogIcon}"
                     Foreground="{StaticResource OrangeForegroundBrush}" />
                <Run Text="Settings"
                     FontFamily="{StaticResource LatoRegular}" />
                </TextBlock>
            </Grid>

            <Grid Grid.Row="1"
                  Width="600"
                  VerticalAlignment="Top">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid Margin="0 0 30 0"
                      VerticalAlignment="Top"
                      Height="{Binding ActualWidth, RelativeSource={RelativeSource Self}}">

                    <Border CornerRadius="8"
                            Name="Mask"
                            Background="White"/>
                    <Grid>
                        <Grid.OpacityMask>
                            <VisualBrush Visual="{Binding ElementName=Mask}" />
                        </Grid.OpacityMask>

                        <Image Source="/Images/rusty.jpg" Stretch="UniformToFill"/>
                    </Grid>
                </Grid>

                <StackPanel Grid.Column="1" local:TextEntryProperty.Value="True">
                    <local:TextEntryControl DataContext="{Binding Name}"/>
                    <local:TextEntryControl DataContext="{Binding Username}"/>
                    <local:PasswordEntryControl DataContext="{Binding Password}"/>
                    <local:TextEntryControl DataContext="{Binding Email}"/>

                    <Button Content="{Binding LogoutText}" 
                            Command="{Binding LogoutCommand}"
                            FontSize="{StaticResource RegularFontSize}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
