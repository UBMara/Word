<UserControl x:Class="Word.PasswordEntryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Word"
             xmlns:core="clr-namespace:Word.Core.ViewModel;assembly=Word.Core"
             mc:Ignorable="d" 
             d:DataContext="{x:Static core:PasswordEntryDesignModel.Instance}">
    <Border BorderBrush="{StaticResource DarkForegroundBrush}"
            BorderThickness="0 0 0 0.5">
        
        <Grid Background="{StaticResource LighterBackgroundBrush}">

			<Grid.InputBindings>
				<MouseBinding MouseAction="LeftDoubleClick" Command="{Binding EditCommand}" />
			</Grid.InputBindings>
   
			<Grid.Triggers>
				<EventTrigger RoutedEvent="MouseEnter">
					<BeginStoryboard>
						<Storyboard>
							<DoubleAnimation To="1"
                                             Duration="0:0:0.4"
                                             Storyboard.TargetName="EditButton"
                                             Storyboard.TargetProperty="Opacity" />
						</Storyboard>
					</BeginStoryboard>
				</EventTrigger>
				<EventTrigger RoutedEvent="MouseLeave">
					<BeginStoryboard>
						<Storyboard>
							<DoubleAnimation To="0"
                                             Duration="0:0:0.4"
                                             Storyboard.TargetName="EditButton"
                                             Storyboard.TargetProperty="Opacity" />
						</Storyboard>
					</BeginStoryboard>
				</EventTrigger>
			</Grid.Triggers>
			
            <Grid.ColumnDefinitions>
                <ColumnDefinition Name="LabelColumnDefinition" Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Text="{Binding Label}"
					   x:Name="Label"
                       Margin="15 12"
					   HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontFamily="{StaticResource LatoRegular}"/>

            <PasswordBox Name="CurrentPassword"
                         Tag="{Binding CurrentPasswordHintText}"
                         PasswordChanged="CurrentPassword_PasswordChanged"
                         Grid.Column="1"
                         Opacity="0"
                         local:AnimateFadeInOut.Value="{Binding Editing}"
                         local:FocusAndSelectProperty.Value="{Binding Editing}"
                         FontSize="{StaticResource RegularFontSize}"
                         Padding="2"
                         Margin="10 10 15 8"/>

            <PasswordBox Name="NewPassword"
                         Tag="{Binding NewPasswordHintText}"
                         PasswordChanged="NewPassword_PasswordChanged"
                         Grid.Row="1"
                         Grid.Column="1"
                         Opacity="0"
                         local:AnimateFadeInOut.Value="{Binding Editing}"
                         local:FocusAndSelectProperty.Value="{Binding Editing}"
                         FontSize="{StaticResource RegularFontSize}"
                         Padding="2"
                         Margin="10 10 15 8"/>
                         
            <PasswordBox Name="ConfirmPassword"
                         Tag="{Binding ConfirmPasswordHintText}" 
                         PasswordChanged="ConfirmPassword_PasswordChanged"
                         Grid.Row="2"
                         Grid.Column="1"
                         Opacity="0"
                         local:AnimateFadeInOut.Value="{Binding Editing}"
                         local:FocusAndSelectProperty.Value="{Binding Editing}"
                         FontSize="{StaticResource RegularFontSize}"
                         Padding="2"
                         Margin="10 10 15 8"/>

            <TextBlock Text="{Binding FakePassword}" 
                       Grid.Column="1"
                       local:AnimateFadeInOut.Value="{Binding Editing, Converter={local:BooleanInvertConverter}}"
                       Margin="15 8"
                       VerticalAlignment="Center"/>

            <Grid Grid.Column="2" local:AnimateFadeInOut.Value="{Binding Editing, Converter={local:BooleanInvertConverter}}">
                <Button Content="{StaticResource FontHorizontalEllipsesIcon}"
						FontFamily="{StaticResource FontAwesome}"
						x:Name="EditButton"
                        Margin="0"
						Opacity="0"
                        Padding="8 5"
                        Cursor="Hand"
                        Command="{Binding EditCommand}"
                        VerticalAlignment="Center"
                        Background="{StaticResource GrayForegroundBrush}"
                        FontSize="{StaticResource SmallFontSize}"/>
            </Grid>

			<StackPanel Grid.Column="2" Orientation="Horizontal">
				<Button local:AnimateFadeInOut.Value="{Binding Editing}"
						IsDefault="True"
						Content="{StaticResource FontCheckIcon}"
						FontFamily="{StaticResource FontAwesome}"
                        Cursor="Hand"
						Padding="8 5"
                        Margin="0 0 5 0"
						Command="{Binding SaveCommand}"
						FontSize="{StaticResource SmallFontSize}"
						Background="{StaticResource DarkGreenForegroundBrush}"
                        VerticalAlignment="Center"/>

				<Button local:AnimateFadeInOut.Value="{Binding Editing}"
						IsCancel="True"
						Content="{StaticResource FontCloseIcon}"
						FontFamily="{StaticResource FontAwesome}"
                        Cursor="Hand"
						Padding="8 5"
                        Margin="0"
						Command="{Binding CancelCommand}"
						FontSize="{StaticResource SmallFontSize}"
						Background="{StaticResource RedForegroundBrush}"
                        VerticalAlignment="Center"/>
			</StackPanel>
        </Grid>
    </Border>
</UserControl>
