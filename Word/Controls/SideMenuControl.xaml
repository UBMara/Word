<UserControl x:Class="Word.SideMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Word"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Template>
        <ControlTemplate TargetType="UserControl">
            <Border>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid Height="50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal">
                            <Button Style="{StaticResource ChatIconButton}" Content="{StaticResource FontChatIcon}"/>
                            <Button Style="{StaticResource ChatIconButton}" Content="{StaticResource FontUserIcon}"/>
                            <Button Style="{StaticResource ChatIconButton}" Content="{StaticResource FontPictureIcon}"/>
                        </StackPanel>

                        <Button Grid.Column="2"
                            Foreground="{StaticResource DarkBlueForegroundBrush}" 
                            Command="{Binding SettingsViewModel.OpenCommand, Source={x:Static local:ViewModelLocator.Instance}}"
                            Style="{StaticResource ChatIconButton}" 
                            Content="{StaticResource FontCogIcon}"/>
                    </Grid>

                    <Border Grid.Row="1" Background="{StaticResource LightForegroundBrush}">
                        <ContentPresenter/>
                    </Border>
                </Grid>
            </Border>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>
