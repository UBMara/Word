<UserControl x:Class="Word.ChatMessageListItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Word"
             xmlns:core="clr-namespace:Word.Core.ViewModel;assembly=Word.Core"
             mc:Ignorable="d" d:DesignWidth="300">
    <Border Padding="5" 
            d:DataContext="{x:Static core:MessageLIDesignViewModel.Instance}">
        <Grid>
            <Border VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="2 7 0 7"
                    Visibility="{Binding SentByMe, Converter={local:BooleanToVisiblityConverter}}"
                    CornerRadius="{Binding ActualWidth, RelativeSource={RelativeSource Self}}"
                    Height="{Binding ActualWidth, RelativeSource={RelativeSource Self}}"
                    Width="35"
                    Background="Green"
                    BorderBrush="{StaticResource LightBlueForegroundBrush}"
                    BorderThickness="1"
                    >
                <TextBlock Text="{Binding Initials}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Foreground="{StaticResource LighterBackgroundBrush}"
                           FontFamily="{StaticResource LatoRegular}"
                           />
            </Border>

            <Grid Margin="45 0 45 0" HorizontalAlignment="{Binding SentByMe, Converter={local:SendBYMeToAligmentConverter}}">
				<Grid.Triggers>
					<EventTrigger RoutedEvent="MouseEnter">
						<BeginStoryboard>
							<Storyboard Storyboard.TargetName="ExtraDetails" Storyboard.TargetProperty="Opacity">
								<DoubleAnimation To="1" Duration="00:00:00.5" />
							</Storyboard>
						</BeginStoryboard>
					</EventTrigger>

					<EventTrigger RoutedEvent="MouseLeave">
						<BeginStoryboard>
							<Storyboard Storyboard.TargetName="ExtraDetails" Storyboard.TargetProperty="Opacity">
								<DoubleAnimation To="0" Duration="00:00:00.5" />
							</Storyboard>
						</BeginStoryboard>
					</EventTrigger>
				</Grid.Triggers>
				
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
					<RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <Border CornerRadius="10"
                    Padding="15"
                    Background="{Binding  SentByMe, Converter={local:SendBYMeToBackgroundConverter}}">
                    <TextBlock VerticalAlignment="Center"
                           TextWrapping="Wrap"
                           FontFamily="{StaticResource LatoRegular}"
                           Foreground="{StaticResource DarkBlueForegroundBrush}"
                           Text="{Binding Message}" />
                </Border>

                <Path Grid.Row="1" 
                      Stroke="Black"
                      Panel.ZIndex="1"
                      Margin="15 -1 15 0"
                      Data="M 0,0 L 10,10 L 20,0 L 0,0"
                      StrokeThickness="0"
					  HorizontalAlignment="{Binding SentByMe, Converter={local:SendBYMeToAligmentConverter}}"
                      Fill="{Binding  SentByMe, Converter={local:SendBYMeToBackgroundConverter}}" />

                <StackPanel Grid.Row="2"
							Name="ExtraDetails"
							HorizontalAlignment="{Binding SentByMe, Converter={local:SendBYMeToAligmentConverter}, ConverterParameter=True}"
                            Orientation="Horizontal">
                    <TextBlock Text="{Binding MessageSentTime, Converter={local:TimeToDisplayConverter}}"
                           Foreground="{StaticResource LightBackgroundBrush}"
                           HorizontalAlignment="Right"
                           Margin="0 0 15 0"
                           FontFamily="{StaticResource LatoRegular}"
                           FontSize="{StaticResource SmallerFontSize}"/>

                    <TextBlock Text="{Binding MessageReadTime, Converter={local:TimeToReadConverter}}"
                               Foreground="{StaticResource LightBackgroundBrush}"
                               HorizontalAlignment="Right"
                               FontFamily="{StaticResource LatoRegular}"
                               FontSize="{StaticResource SmallerFontSize}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
