<UserControl x:Class="Word.BubbleContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Word"
             xmlns:core="clr-namespace:Word.Core.ViewModel;assembly=Word.Core"
             mc:Ignorable="d" 
             d:DataContext="{x:Static core:ChatAttachmentPopupMenuDesignModel.Instance}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border CornerRadius="10"
                Padding="15"
                Margin="5 0 0 0"
                Background="{Binding BubbleBackground, Converter={local:StringtoBrushConverter}}">

            <Border.Effect>
                <DropShadowEffect BlurRadius="4" ShadowDepth="2" Color="{StaticResource BlueForeground}" />
            </Border.Effect>

            <ContentControl Content="{Binding Converter={local:PopupContentConverter}}" />
        </Border>

        <Path Grid.Row="1" 
                Stroke="Black"
                Panel.ZIndex="1"
                Margin="15 -1 15 0"
                Data="M 0,0 L 10,10 L 20,0 L 0,0"
                StrokeThickness="0"
		        HorizontalAlignment="{Binding ArrowAlignment, Converter={local:HorizontalAlignmentConverter}}"
                Fill="{Binding BubbleBackground, Converter={local:StringtoBrushConverter}}">

            <Path.Effect>
                <DropShadowEffect BlurRadius="3" ShadowDepth="3" Color="{StaticResource BlueForeground}" />
            </Path.Effect>
        </Path>

        <StackPanel Grid.Row="2"
				        Name="ExtraDetails"
				        HorizontalAlignment="{Binding SentByMe, Converter={local:SendBYMeToAligmentConverter}, ConverterParameter=True}"
                        Orientation="Horizontal">
            <TextBlock Text="{Binding MessageSentTime, Converter={local:TimeToDisplayConverter}}"
                            Foreground="{StaticResource LightBackgroundBrush}"
                            HorizontalAlignment="Right"
                            Margin="0 0 15 0"
                            FontFamily="{StaticResource LatoRegular}"
                             FontSize="{StaticResource SmallerFontSize}"/>

            <TextBlock Text="{Binding MessageReadTime, Converter={local:TimeToReadConverter}}"
                        Foreground="{StaticResource LightBackgroundBrush}"
                        HorizontalAlignment="Right"
                        FontFamily="{StaticResource LatoRegular}"
                         FontSize="{StaticResource SmallerFontSize}"/>
        </StackPanel>
    </Grid>
</UserControl>
