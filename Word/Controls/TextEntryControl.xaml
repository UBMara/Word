<UserControl x:Class="Word.TextEntryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Word"
             xmlns:core="clr-namespace:Word.Core.ViewModel;assembly=Word.Core"
             mc:Ignorable="d" 
             DataContext="{x:Static core:TextEntryDesignModel.Instance}">
    <Border BorderBrush="{StaticResource DarkForegroundBrush}"
            BorderThickness="0 0 0 0.5">
        
        <Grid Background="{StaticResource LighterBackgroundBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding Label}"
                       Margin="15 12"
                       VerticalAlignment="Center"
                       FontFamily="{StaticResource LatoRegular}"/>

            <TextBox Text="{Binding OriginalText}"
                     Grid.Column="1"
                     FontSize="{StaticResource RegularFontSize}"
                     
                     Padding="2"
                     Margin="10 10 15 8"/>

            <TextBlock Grid.Column="1" 
                       Margin="15 8"
                       VerticalAlignment="Center"
                       FontFamily="{StaticResource LatoRegular}"
                       Text="{Binding OriginalText}"/>

            <Grid Grid.Column="2">
                <Button Content="..." 
                        Margin="0"
                        Padding="8 5"
                        Cursor="Hand"
                        Command="{Binding EditCommand}"
                        VerticalAlignment="Center"
                        Background="{StaticResource GrayForegroundBrush}"
                        FontSize="{StaticResource SmallFontSize}"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
