<Window x:Class="Word.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"       
        xmlns:local="clr-namespace:Word" 
        xmlns:viewmodel="clr-namespace:Word.ViewModel" 
        xmlns:custom="clr-namespace:Word.Converters" 
        d:DataContext="{d:DesignInstance Type=viewmodel:WindowViewModel}"
        Icon="pack://application:,,,/Images/logo-small.png"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        mc:Ignorable="d"
        MinWidth="{Binding MinWidth}" MinHeight="{Binding MinHeight}"
        Title="Welcome" Height="600" Width="900">
    <Window.Resources>
        <Style TargetType="{x:Type local:MainWindow}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Window}">
                        <Border Padding="{Binding OuterMarginSizeThick, FallbackValue=10}">
                            <Grid>
                                <Border x:Name="Container" 
                                        Background="{StaticResource LightBackgroundBrush}" 
                                        CornerRadius="{Binding CornerRadius, FallbackValue=10}"/>

                                <Border CornerRadius="{Binding CornerRadius, FallbackValue=6}" 
                                        Background="{StaticResource LightForegroundBrush}">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="0" Opacity="0.2"/>
                                    </Border.Effect>
                                </Border>

                                <Grid>
                                    <Grid.OpacityMask>
                                        <VisualBrush Visual="{Binding ElementName=Container}"/>
                                    </Grid.OpacityMask>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="{Binding TitleHeightLength, FallbackValue=42}" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0" Panel.ZIndex="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <Button Style="{StaticResource IconButton}" Command="{Binding MenuCommand}">
                                            <Image Source="pack://application:,,,/Images/logo-small.png" />
                                        </Button>

                                        <Viewbox Grid.Column="0" Grid.ColumnSpan="3" Margin="5">
                                            <StackPanel>
                                                <TextBlock FontFamily="{StaticResource LatoBold}"
                                                           FontSize="{StaticResource RegularFontSize}"
                                                           Margin="0 0 0 -5">
                                                    <Run Text="W" Foreground="{StaticResource YellowForegroundBrush}"/><Run Text="O" Foreground="{StaticResource BlueForegroundBrush}"/><Run Text="R" Foreground="{StaticResource RedForegroundBrush}"/><Run Text="D" Foreground="{StaticResource GreenForegroundBrush}"/>
                                                </TextBlock>
                                                <TextBlock Text="by fasetto" 
                                                           Foreground="{StaticResource LightBackgroundBrush}"
                                                           TextAlignment="Center"/>
                                            </StackPanel>
                                        </Viewbox>

                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                            <Button Command="{Binding MinCommand}" Style="{StaticResource WindowControlButton}" Content="_" />
                                            <Button Command="{Binding MaxCommand}" Style="{StaticResource WindowControlButton}" Content="[ ]" />
                                            <Button Command="{Binding CloseCommand}" Style="{StaticResource WindowCloseButton}" Content="X" />
                                        </StackPanel>
                                    </Grid>

                                    <Border Grid.Row="1" Padding="{Binding InnerPadding}">
                                        <ContentPresenter Content="{TemplateBinding Content}" />
                                    </Border>
                                </Grid>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <WindowChrome.WindowChrome>
        <WindowChrome ResizeBorderThickness="{Binding ResizeBorderThick}" 
                      CaptionHeight="{Binding TitleHeight}"
                      CornerRadius="0"
                      GlassFrameThickness="0"/>
    </WindowChrome.WindowChrome>

    <Border Background="{StaticResource BlueForegroundBrush}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            
            <Grid.Background>
                <ImageBrush TileMode="Tile" ViewportUnits="Absolute" Viewport="0 0 500 500" ImageSource="/Images/emoji-background.png" />
            </Grid.Background>

            <Frame Grid.Column="1" x:Name="MainPage" 
                   Content="{Binding CurrentPage, Converter={custom:ApplicationPageValueConverter}}"
                   Background="Transparent"/>
            <local:SideMenuControl>
                <local:ChatListItemControl Height="60" VerticalAlignment="Top"/>
            </local:SideMenuControl>
        </Grid>
    </Border>
</Window>